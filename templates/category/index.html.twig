{% extends 'base.html.twig' %}

{% set category = entity %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <main class="container">
        <div class="row">
            <div class="col">
                <h3 class="heading">{{ category.name }}</h3>
                <div id="articles-list">
                    {% include 'article/_list.html.twig' with { articles: category.articles } %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
