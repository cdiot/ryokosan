{% extends 'base.html.twig' %}

{% block title %} {{ 'title.reset_email_send'|trans }} {{ parent() }}
{% endblock %}

{% block body %}
	<section class="container py-5">
		<div class="row justify-content-center">
			<div class="col-xl-4 col-lg-5 col-md-6 col-sm-8 mb-3">
				<h1 class="heading mt-3 mb-4 text-center">{{ 'headline.email_send'|trans }}</h1>
                <p> {{ 'reset_token.content'|trans|raw }} {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
				</p>
				<p>{{ 'action.retry_reset_password'|trans({'link': path('app_forgot_password_request') })|raw }}</p>
			</div>
		</div>
	</section>
{% endblock %}
