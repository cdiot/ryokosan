{% extends 'base.html.twig' %}

{% block title %} {{ 'title.contact_us'|trans }} {{ parent() }}
{% endblock %}

{% block body %}
	<section class="container py-5">
		<div class="row justify-content-center">
			<div class="col-xl-4 col-lg-5 col-md-6 col-sm-8 mb-3">
				{% for message in app.flashes('notice') %}
                    <div class="alert alert-info">{{message}}</div>
                {% endfor %}
				<h1 class="heading mt-3 mb-4 text-center">{{ 'headline.contact_us'|trans }}</h1>
				<!-- forms alerts -->
				{{ form_start(form) }}
				{{ form_row(form.email) }}
				{{ form_row(form.subject) }}
				{{ form_row(form.content) }}
				<button class="button button-action w-100 mb-3" type="submit">{{ 'action.send'|trans }}</button>
				{{ form_end(form) }}
			</div>
		</div>
	</section>
	{% endblock %}